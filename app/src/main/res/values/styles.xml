<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TextFunctionHint" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#bdbdbd</item>
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">1dp</item>
    </style>


    <style name="AppThemeDark.GraphPanelStyle">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.EditText.Formula" parent="TextAppearance.AppCompat">
        <item name="android:inputType">text|textNoSuggestions|textMultiLine</item>
        <item name="minTextSize">24sp</item>
        <item name="maxTextSize">64sp</item>
        <item name="stepTextSize">8sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">top|left</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="EditTextSolve">
        <item name="android:inputType">text|textNoSuggestions</item>
        <item name="android:paddingRight">16dip</item>
        <item name="minTextSize">20sp</item>
        <item name="maxTextSize">40sp</item>
        <item name="stepTextSize">2sp</item>
    </style>

    <style name="AppTheme.EditText.Result">
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:textSize">40sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">right|center</item>
        <item name="android:clickable">true</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none|textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="minTextSize">36sp</item>
        <item name="maxTextSize">64sp</item>
        <item name="stepTextSize">8sp</item>
    </style>

    <color name="background_pad_numberic">#263238</color>

    <style name="HistoryText.Query" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="HistoryText.Result" parent="TextAppearance.AppCompat.Large">
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="b_number">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">0dp </item>
        <item name="android:layout_weight">1 </item>
        <item name="android:background">#E6E6E6 </item>
        <item name="android:textColor"> @color/color_grey_700</item>
        <item name="android:textSize">20sp </item>
        <item name="android:textStyle"> bold</item>
    </style>



    <style name="b_calculation">
        <item name="android:layout_width"> match_parent</item>
        <item name="android:layout_height">0dp </item>
        <item name="android:layout_weight">1 </item>
        <item name="android:background">@color/color_grey_700 </item>
        <item name="android:textColor"> #CDCBCB</item>
        <item name="android:textSize">28sp </item>
        <item name="android:textStyle"> bold</item>
    </style>

    <style name="TranslucentAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/transparent</item> <!-- Or any transparency or color you need -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>