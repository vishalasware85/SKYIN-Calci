        android:contentDescription="@string/settings"
        android:padding="8dp"
        android:src="@drawable/ic_settings_white_24dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:contentDescription="share"
        android:padding="8dp"
        android:src="@drawable/ic_share_white_24dp" />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/help"
        android:padding="8dp"
        android:src="@drawable/ic_help_white_24dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_rate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?selectableItemBackground"
        android:contentDescription="@string/help"
        android:padding="8dp"
        android:src="@drawable/ic_star_rate_white_18dp" />
        -->

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current plan"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/purchaseTxtHeader"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free"
        android:layout_marginTop="10dp"
        android:textSize="25sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/upgradeHeadBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#0C1629"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/upgradeHeadLayout"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/shine_bg"
            android:rotation="10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="upgrade"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/orHeadTxt"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/loginHeadBtn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#0C1629"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/loginHeadLayout"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/shine_bg"
            android:rotation="10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="login"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adId">
    </com.google.android.gms.ads.AdView>
</LinearLayout>

