<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="2dp"
            android:weightSum="4">

            <Button
                android:layout_weight="1"
                android:id="@+id/dec"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_btn_bg"
                android:text="@string/dec" />

            <Button
                android:layout_weight="1"
                android:id="@+id/hex"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_btn_bg"
                android:text="@string/hex" />

            <Button
                android:layout_weight="1"
                android:id="@+id/bin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/round_btn_bg"
                android:text="@string/bin" />

            <Button
                android:layout_weight="1"
                android:id="@+id/oct"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/round_btn_bg"
                android:text="@string/oct" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:weightSum="6">

        <Button
            android:id="@+id/op_and"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/and" />

        <Button
            android:id="@+id/op_or"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/or" />

        <Button
            android:id="@+id/op_neg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/not" />

        <Button
            android:id="@+id/op_equal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/eq" />


        <Button
            android:id="@+id/btn_clear"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:scaleType="center"
            android:text="@string/clear" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:weightSum="5">

        <Button
            android:id="@+id/btn_geq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/geq" />

        <Button
            android:id="@+id/btn_leq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/leq" />

        <Button
            android:id="@+id/btn_left_paratheses"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/leftParen" />

        <Button
            android:id="@+id/btn_right_parathese"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/rightParen" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_backspace_white_24dp"
            android:text="@string/delete" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:weightSum="5">


        <Button
            android:id="@+id/btn_lt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/lt" />

        <Button
            android:id="@+id/btn_gt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/gt" />

        <Button
            android:id="@+id/btn_neq"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/neq" />

        <Button
            android:id="@+id/btn_true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/mtrue" />

        <Button
            android:id="@+id/btn_false"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/mfalse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="6">

        <Button
            android:id="@+id/A"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="A" />

        <Button
            android:id="@+id/B"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="B" />

        <Button
            android:id="@+id/C"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="C" />

        <Button
            android:id="@+id/D"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="@string/D" />

        <Button
            android:id="@+id/E"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="@string/E" />

        <Button
            android:id="@+id/F"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="@string/F" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center">

        <Button
            android:id="@+id/digit6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit6" />

        <Button
            android:id="@+id/digit7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit7" />

        <Button
            android:id="@+id/digit8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit8" />

        <Button
            android:id="@+id/digit9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit9" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/round_blue_bg"
            android:text="@string/mul" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <Button
            android:id="@+id/digit3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit3" />

        <Button
            android:id="@+id/digit4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit4" />

        <Button
            android:id="@+id/digit5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit5" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/round_blue_bg"
            android:text="@string/plus" />

        <Button
            android:id="@+id/btn_minus"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/round_blue_bg"
            android:text="@string/minus" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginTop="2dp">

        <Button
            android:id="@+id/digit0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit0" />

        <Button
            android:id="@+id/digit1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit1" />

        <Button
            android:id="@+id/digit2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/rectangle_key_bg"
            android:text="@string/digit2" />


        <Button
            android:id="@+id/btn_equal"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/round_btn_bg"
            android:text="@string/equal" />

    </LinearLayout>


</LinearLayout>
