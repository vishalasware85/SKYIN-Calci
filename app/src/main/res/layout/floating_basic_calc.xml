<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_grad"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_exp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|end"
            android:paddingRight="20dp"
            android:text=""
            android:textColor="#C5C8CB"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/text_number"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|end"
            android:maxLength="14"
            android:paddingRight="20dp"
            android:text="0"
            android:textColor="#C5C8CB"
            android:textSize="40sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/sevenFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click7"
                android:text="7"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/fourFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click4"
                android:text="4"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/oneFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click1"
                android:text="1"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/plusMinusFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click_plusminus"
                android:text="+/-"
                android:textColor="#C5C8CB" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/eightFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click8"
                android:text="8"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/fiveFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click5"
                android:text="5"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/twoFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click2"
                android:text="2"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/zeroFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click0"
                android:text="0"
                android:textColor="#C5C8CB" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/nineFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click9"
                android:text="9"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/sixFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click6"
                android:text="6"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/threeFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click3"
                android:text="3"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/dotFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rectangle_key_bg"
                android:onClick="click_point"
                android:text="."
                android:textColor="#C5C8CB" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:weightSum="4">

            <Button
                android:id="@+id/divideFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="division"

                android:text="/"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/intoFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="multiplication"

                android:text="*"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/minusFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="subtract"
                android:text="-"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/plusFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="addition"

                android:text="+"
                android:textColor="#C5C8CB" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/acFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="allclear"

                android:text="AC"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/cFloat"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/round_blue_bg"
                android:onClick="clear"

                android:text="C"
                android:textColor="#C5C8CB" />

            <Button
                android:id="@+id/equalFloat"
                android:layout_width="70dp"
                android:layout_height="150dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/round_btn_bg"
                android:onClick="equal"
                android:text="="
                android:textColor="#C5C8CB" />


        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>