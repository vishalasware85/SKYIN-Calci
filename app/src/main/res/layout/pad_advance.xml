<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

    <TextView
        android:id="@+id/arrowTxt"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/pad_advance_arrow_bg"
        android:gravity="center"
        android:text="^"
        android:textColor="#FFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:background="@drawable/pad_advance_sheet_bg"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arcsin"
                style="?buttonAdvanceStyle"
                android:text="@string/arcsin" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arccos"
                style="?buttonAdvanceStyle"
                android:text="@string/arccos" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arctan"
                style="?buttonAdvanceStyle"
                android:text="@string/arctan" />
            <!--<com.example.duy. calculator.view.Padcom.duy.calculator.view.CalcButtonBasicCalculator-->
            <!--android:id="@+id/btnTable"-->
            <!--style="?buttonAdvanceStyle"-->
            <!--android:layout_weight="1"-->
            <!--android:text="@string/table"/>-->
            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_log"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/log10" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_sinh"
                style="?buttonAdvanceStyle"
                android:text="@string/sinh" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_cosh"
                style="?buttonAdvanceStyle"
                android:text="@string/cosh" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_tanh"
                style="?buttonAdvanceStyle"
                android:text="@string/tanh" />
            <!--<com.example.duy. calculator.view.Padcom.duy.calculator.view.CalcButtonBasicCalculator-->
            <!--android:id="@+id/btnTable"-->
            <!--style="?buttonAdvanceStyle"-->
            <!--android:layout_weight="1"-->
            <!--android:text="@string/table"/>-->
            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_exp"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/exp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arcsinh"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/arcsinh" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arccosh"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/arccosh" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_arctanh"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/arctanh" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_mod"
                style="?buttonAdvanceStyle"
                android:text="@string/mod" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_ln"
                style="?buttonAdvanceStyle"
                android:text="@string/ln" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_abs"
                style="?buttonAdvanceStyle"
                android:text="@string/abs" />

            <com.skyncalci.ncalc.view.CalcButton
                style="?buttonAdvanceStyle"
                android:id="@+id/btn_var_e"
                android:text="@string/constant_e" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_percent"
                style="?buttonAdvanceStyle"
                android:text="@string/percentage" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_sign"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sgn" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_i"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/i" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_gcd"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/gcd" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_lcm"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/lcm" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_combi"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/binomial" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_perm"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/permutations" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_ceil"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ceil" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_floor"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/floor" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_min"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/min" />

            <com.skyncalci.ncalc.view.CalcButton
                android:id="@+id/btn_max"
                style="?buttonAdvanceStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/max" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
